<h1>Job Dashboard</h1>

{{#collection Jobba.JobsCollectionView contentBinding="Jobba.jobListController" itemClass="job"}}
  <h2>{{content.title}} - {{content.details}}</h2>
  {{#collection Jobba.StepsCollectionView class="steps rounded-corners" itemClass="step" itemClassBinding="isCurrentStep isActionable"}}
    {{name}}
    {{#if isActionable}}
      <div class="description">{{description}}</div>
      {{#view SC.Button classBinding="isActive" action="completeStep"}}
        Done
      {{/view}}
    {{/if}}
  {{/collection}}
{{/collection}}
